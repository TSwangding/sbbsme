.container
	.container-fluid
		.row-fluid
			.span12.well
				%h3 Profile
				%img{:src=>@current_user.AvatarURL}
				%br
				=@current_user.Name
		.row-fluid
			.span4.well
				%h3 My Posts
				%ul
					- @topics.each do |article|
						%li
							%a{:href=>"/post/#{article.Id}"}=article.Subject
							%p= article.Body
			.span4.well
				%h3 My Blocks
				%ul
					- @blocks.each do |article|
						%li
							%a{:href=>"/post/#{article.Id}"}=article.Subject
							%p= article.Body
			.span4.well
				%h3 My Watched
