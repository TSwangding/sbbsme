#container.container
	.well
		%form{:method=>'post',:action=>'/edit_post/'+@id,:id=>"post"}
			Subject:
			%input{:type=>'text',:name=>'subject',:size=>'45',:value=>@block.Subject}
			%br
			Tags:
			%input{:type=>'text',:name=>'tags',:size=>'45',:value=>@tag_string}
			%br
			Public?
			%input{:type=>'checkbox',:name=>'public',:value=>1,:checked=>@block.Public==1}
			%br
			Format:
			%input{:type=>'radio',:name=>'format',:value=>'Markdown',:checked=>@block.Format=='Markdown'}
				Markdown
			%input{:type=>'radio',:name=>'format',:value=>'HTML',:checked=>@block.Format=='HTML'}
				HTML
			%br
			%input{:type=>'hidden',:name=>'user_id',:id=>'user_id'}
			%input{:type=>"submit",:value=>"submit"}
%script{:type=>'text/javascript',:src=>'/javascripts/jquery-ui.min.js'}
%script{:type=>'text/javascript',:src=>'/javascripts/jHtmlArea-0.7.0.js'}
